<%= form_for(@event) do |f| %>
  <%= f.error_messages %>
  <div class="field">
    <%= f.label :calendar_id %>:<br />
    <%= f.select(:calendar_id, options(Calendar.arrange)) %>
  </div>
  <div class="field">
    <%= f.label :title %>:<br />
    <%= f.text_field :title, :class => 'required' %>
  </div>
  <div class="field">
    <%= f.label :body %>:<br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :start %>:<br />
    <%= f.text_field :start, :class => 'required datetime', :value => @event.start.blank? ? '' : @event.start.strftime('%Y-%m-%d %H:%M') %>
  </div>
  <div class="field">
    <%= f.label :stop %>:<br />
    <%= f.text_field :stop, :class => 'required datetime', :value => @event.stop.blank? ? '' : @event.stop.strftime('%Y-%m-%d %H:%M') %>
  </div>
  <p class="buttonset">
    <%= f.submit %>
    <%- if !@event.new_record? then -%>
      <%= link_to("Delete Event", event_path(@event), :method => :delete, :confirm => "Really delete this Event?") %>
    <%- end -%>
    <%= link_to("Back", :back) %>
  </p>
<% end %>
