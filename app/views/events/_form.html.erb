<%= form_for(@event, :html => {:class => "validatable"}) do |f| %>
  <%= f.error_messages %>
  <div class="form-group">
    <%= f.label :calendar_id, :class => "control-label" %>
    <div class="controls">
      <%= combo_box(:event, :calendar_id, options_from_calendar_for_select) %>
      <%#= combo_box(:event, :calendar_id, options_from_collection_for_combo_box(Calendar.all, :id, :name, @event.calendar_id)) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :title, :class => 'required text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :body, :rows => 6, :class => "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-5">
  <div class="form-group">
    <%= f.label :start, :class => "control-label" %>
    <div class="row">
      <div class="col-sm-6">
        <%= bootstrap_datepicker_tag(:start_date, @event.start) %>
      </div>
      <div class="col-sm-6">
        <%= bootstrap_timepicker_tag(:start_time, @event.start) %>
      </div>
    </div>
  </div>
    </div>
    <div class="col-lg-5 col-lg-offset-2">
  <div class="form-group">
    <%= f.label :stop, :class => "control-label" %>
    <div class="row">
      <div class="col-sm-6">
        <%= bootstrap_datepicker_tag(:stop_date, @event.stop) %>
      </div>
      <div class="col-sm-6">
        <%= bootstrap_timepicker_tag(:stop_time, @event.stop) %>
      </div>
    </div>
  </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fb, "Free/Busy status" %>
    <div class="radio">
      <%= f.label :fb, value: Event::FB_FREE do %>
        <%= f.radio_button :fb, Event::FB_FREE %> Free
      <% end %>
    </div>
    <div class="radio">
      <%= f.label :fb, value: Event::FB_BUSY do %>
        <%= f.radio_button :fb, Event::FB_BUSY %> Busy
      <% end %>
    </div>
  </div>
  <% if @event.recurrence then %>
    <div class="form-group">
      <%= f.label :apply, "Recurring event update scope" %>
      <div class="radio">
        <%= label_tag(:apply_one) do %>
          <%= radio_button_tag "apply", "one", :checked => true %> Only this occurence
        <% end %>
      </div>
      <div class="radio">
        <%= label_tag(:apply_next) do %>
          <%= radio_button_tag "apply", "next" %> This occurence and all the following
        <% end %>
      </div>
      <div class="radio">
        <%= label_tag(:apply_all) do %>
          <%= radio_button_tag "apply", "all" %> All occurences
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="form-actions">
    <%= f.submit(:class => "btn btn-primary") %>
    <%- if !@event.new_record? then -%>
      <%= link_to(content_tag(:i, '', :class => 'fa fa-trash-o') + ' Delete Event', event_path(@event), method: :delete, class: 'btn btn-danger', data: { confirm: 'Really delete this Event?' }) %>
    <%- end -%>
    <%= link_to("Back", :back, :class => "btn btn-default") %>
  </div>
<% end %>
