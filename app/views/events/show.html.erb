<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h3><%= @event.title %></h3>
</div>
<div class="modal-body">
  <%= @event.start.to_s(:long_ordinal) %> â†’
  <% if @event.start.to_date == @event.stop.to_date then %>
    <%= @event.stop.to_s(:time) %>
  <% else %>
    <%= @event.stop.to_s(:long_ordinal) %>
  <% end %>
  <br />
  <%= simple_format @event.body %>
</div>
<div class="modal-footer">
  <%= link_to('Edit Event', edit_event_path(@event), :class => "btn btn-primary") %>
  <%= link_to(content_tag(:i, "", :class => "icon-trash") + " Delete Event", event_path(@event), :method => :delete, :confirm => "Really delete the event (this can't be undone)?", :class => "delete btn btn-danger") %>
</div>
